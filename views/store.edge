    <table>
        <caption>Cales</caption>
        <thead>
            <tr>
                <th>Description</th>
                <th>Volume</th>
                <th>Capacité</th>
                <th>Résistance</th>
            </tr>
        </thead>
        <tbody>
            @each(hold in holds)
                <tr>
                    <td>{{ hold.description }}</td>
                    <td>{{ hold.volume }}</td>
